{% set conferences = structure.conferences %}
  <table class="table table-auto w-full not-prose text-center">
    {% for conference in conferences %}
    <tr class="table-row border-neutral border-b-4 last:border-b-0">
      <td class="w-1/6 p-0 bg-base-300 text-xl text-base-content">
        <div class="tooltip tooltip-left tooltip-neutral" data-tip="Conference">
          <div class="-rotate-90 capitalize">{{ conference.name }}</div>
        </div>
      </td>
      <td class="w-5/6 p-0">
        {% include "partials/seasonDivisionsTable.njk" %}
      </td>
    </tr>
    {% endfor %}
  </table>